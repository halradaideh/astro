---
const pathname = Astro.url.pathname;
import { SITE_TITLE } from '../consts';
import { certificates } from '../data/certificates';
---

<nav class="nav-container">
  <div class="nav-content">
    <div class="nav-left">
      <h2><a href="/">{SITE_TITLE}</a></h2>
      <div class="cert-badges">
        {
          certificates.map((cert) => (
            <a
              href={cert.credlyUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={cert.name}
              title={cert.name}
              class="cert-badge"
            >
              <img src={cert.imageUrl} alt={cert.name} loading="lazy" />
            </a>
          ))
        }
      </div>
    </div>
    <div class="nav-right">
      <div class="nav-links">
        <a href="/" class={pathname === '/' ? 'nav-link active' : 'nav-link'}>Home</a>
        <a href="/blog" class={pathname.startsWith('/blog') ? 'nav-link active' : 'nav-link'}
          >Blog</a
        >
        <a href="/projects" class={pathname === '/projects' ? 'nav-link active' : 'nav-link'}
          >Projects</a
        >
        <a href="/about" class={pathname === '/about' ? 'nav-link active' : 'nav-link'}>About</a>
      </div>
      <div class="social-links">
        <a
          href="https://github.com/halradaideh"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
            <path
              fill="currentColor"
              d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
            ></path>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/hamdan-a-radaideh/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
            <path
              fill="currentColor"
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
