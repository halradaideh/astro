---
// Get these values from https://giscus.app after setting up:
const GISCUS_REPO = import.meta.env.GISCUS_REPO; // format: username/repository
const GISCUS_REPO_ID = import.meta.env.GISCUS_REPO_ID;
const GISCUS_CATEGORY = import.meta.env.GISCUS_CATEGORY || 'General'; // This is the default
const GISCUS_CATEGORY_ID = import.meta.env.GISCUS_CATEGORY_ID;
---

<div class="comments-container">
  <h2>Comments</h2>
  <div class="giscus"></div>
</div>

<script>
  function loadGiscus() {
    const script = document.createElement('script');
    script.src = 'https://giscus.app/client.js';
    script.setAttribute('data-repo', import.meta.env.GISCUS_REPO);
    script.setAttribute('data-repo-id', import.meta.env.GISCUS_REPO_ID);
    script.setAttribute('data-category', import.meta.env.GISCUS_CATEGORY || 'General');
    script.setAttribute('data-category-id', import.meta.env.GISCUS_CATEGORY_ID);
    script.setAttribute('data-mapping', 'pathname');
    script.setAttribute('data-strict', '0');
    script.setAttribute('data-reactions-enabled', '1');
    script.setAttribute('data-emit-metadata', '0');
    script.setAttribute('data-input-position', 'top');
    script.setAttribute(
      'data-theme',
      document.documentElement.getAttribute('data-theme') === 'dark' ? 'dark' : 'light'
    );
    script.setAttribute('data-lang', 'en');
    script.setAttribute('data-loading', 'lazy');
    script.setAttribute('data-create-issue', 'true');
    script.crossOrigin = 'anonymous';
    script.async = true;

    const container = document.querySelector('.giscus');
    if (container) {
      // Clear any existing content
      container.innerHTML = '';
      container.appendChild(script);
    }
  }

  // Load Giscus when the page loads
  document.addEventListener('DOMContentLoaded', loadGiscus);

  // Reload Giscus when theme changes
  document.addEventListener('theme-changed', loadGiscus);
</script>

<style>
  .comments-container {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .comments-container h2 {
    margin-bottom: 2rem;
    font-size: 1.5rem;
    color: var(--heading-color);
  }

  .giscus {
    margin-top: 2rem;
  }
</style>
