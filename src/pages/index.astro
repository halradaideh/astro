---
import { getCollection } from 'astro:content';
import Navigation from '../components/Navigation.astro';
import ThemeScript from '../components/ThemeScript.astro';
import '../styles/global.css';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3); // Get the 3 most recent posts

const gitVersion = import.meta.env.GIT_VERSION || 'dev';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <ThemeScript />
    <title>Hamdan Radaideh - DevOps & SRE Blog</title>
    <meta
      name="description"
      content="Insights and experiences in DevOps, Site Reliability Engineering, and cloud infrastructure from Hamdan Radaideh"
    />
  </head>
  <body>
    <Navigation />

    <main>
      <section class="hero">
        <div class="hero-content">
          <h1>DevOps & Infrastructure Engineering</h1>
          <p>
            Exploring cloud-native technologies, infrastructure automation, and site reliability
            engineering best practices
          </p>
          <div class="cta-buttons">
            <a href="/blog" class="cta-button primary">Read Blog</a>
            <a href="/about" class="cta-button secondary">About Me</a>
          </div>
        </div>
      </section>

      <section class="expertise">
        <div class="container">
          <h2>Areas of Expertise</h2>
          <div class="expertise-grid">
            <div class="expertise-card">
              <h3>Kubernetes & Containers</h3>
              <p>Orchestration, deployment strategies, and cluster management</p>
            </div>
            <div class="expertise-card">
              <h3>Infrastructure as Code</h3>
              <p>Automation, configuration management, and cloud architecture</p>
            </div>
            <div class="expertise-card">
              <h3>CI/CD & DevOps</h3>
              <p>Pipeline design, automation, and deployment strategies</p>
            </div>
            <div class="expertise-card">
              <h3>Site Reliability</h3>
              <p>Monitoring, observability, and system optimization</p>
            </div>
          </div>
        </div>
      </section>

      <section class="featured-posts">
        <div class="container">
          <h2>Latest Articles</h2>
          <div class="posts-grid">
            {
              posts.map((post) => (
                <article class="post-card">
                  <a href={`/blog/${post.id}/`}>
                    {post.data.heroImage && (
                      <img src={post.data.heroImage} alt={post.data.title} class="post-image" />
                    )}
                    <div class="post-content">
                      <h3 class="post-title">{post.data.title}</h3>
                      <p class="post-date">
                        {new Date(post.data.pubDate).toLocaleDateString('en-us', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric',
                        })}
                      </p>
                      <p class="post-description">{post.data.description}</p>
                    </div>
                  </a>
                </article>
              ))
            }
          </div>
          <div class="view-all">
            <a href="/blog" class="cta-button secondary">View All Posts</a>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container">
        <p>Â© {new Date().getFullYear()} Hamdan Radaideh. All rights reserved. | v{gitVersion}</p>
        <div class="social-links">
          <a href="https://github.com/halradaideh" target="_blank" rel="noreferrer">GitHub</a>
          <a href="https://www.linkedin.com/in/hamdan-a-radaideh/" target="_blank" rel="noreferrer"
            >LinkedIn</a
          >
        </div>
      </div>
    </footer>
    <style>
      .hero {
        background: var(--hero-gradient);
        color: var(--hero-text);
        padding: 6rem 1rem;
        text-align: center;
      }

      .hero-content {
        max-width: 800px;
        margin: 0 auto;
      }

      .hero h1 {
        font-size: 3.5rem;
        margin: 0 0 1rem;
        font-weight: 700;
        color: var(--hero-text);
      }

      .hero p {
        font-size: 1.25rem;
        margin: 0 0 2rem;
        opacity: 0.9;
        line-height: 1.6;
        color: var(--hero-text);
      }

      .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
      }

      .cta-button {
        display: inline-block;
        padding: 0.8rem 2rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
      }

      .cta-button.primary {
        background: var(--hero-text);
        color: var(--accent-color);
      }

      .cta-button.primary:hover {
        background: rgba(255, 255, 255, 0.9);
        transform: translateY(-2px);
      }

      .cta-button.secondary {
        background: transparent;
        color: var(--hero-text);
        border: 2px solid var(--hero-text);
      }

      .cta-button.secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 1rem;
      }

      .expertise {
        background: var(--bg-color);
        width: 100%;
      }

      .expertise h2,
      .featured-posts h2 {
        font-size: 2rem;
        margin: 0 0 3rem;
        text-align: center;
        color: var(--text-color);
      }

      .expertise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
      }

      .expertise-card {
        padding: 2rem;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        transition:
          transform 0.2s ease,
          background-color 0.3s ease;
      }

      .expertise-card:hover {
        transform: translateY(-4px);
      }

      .expertise-card h3 {
        color: var(--text-color);
        margin: 0 0 1rem;
        font-size: 1.5rem;
      }

      .expertise-card p {
        color: var(--text-muted);
        margin: 0;
        line-height: 1.6;
        font-size: 1.1rem;
      }

      .featured-posts {
        background: var(--bg-color);
        width: 100%;
      }

      .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
      }

      .post-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s ease;
      }

      .post-card:hover {
        transform: translateY(-4px);
      }

      .post-card a {
        text-decoration: none;
        color: inherit;
      }

      .post-image {
        width: 100%;
        height: 200px;
        object-fit: contain;
        background: var(--card-bg);
        padding: 1rem;
      }

      .post-content {
        padding: 1.5rem;
      }

      .post-title {
        color: var(--text-color);
        margin: 0 0 0.5rem;
        font-size: 1.5rem;
      }

      .post-date {
        color: var(--text-muted);
        margin: 0 0 1rem;
        font-size: 0.9rem;
      }

      .post-description {
        color: var(--text-color);
        margin: 0;
        line-height: 1.6;
        font-size: 1.1rem;
        opacity: 0.9;
      }

      .view-all {
        text-align: center;
      }

      .view-all .cta-button.secondary {
        color: var(--text-color);
        border-color: var(--border-color);
      }

      .view-all .cta-button.secondary:hover {
        background: var(--hover-bg);
      }

      .footer {
        background: var(--card-bg);
        border-top: 1px solid var(--border-color);
        padding: 2rem 0;
        color: var(--text-muted);
        width: 100%;
      }

      .footer .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1rem;
      }

      .footer p {
        margin: 0;
        font-size: 1.1rem;
      }

      .footer .social-links {
        display: flex;
        gap: 1.5rem;
      }

      .footer .social-links a {
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.2s ease;
        font-size: 1.1rem;
      }

      .footer .social-links a:hover {
        color: var(--text-color);
      }

      @media (max-width: 768px) {
        .hero h1 {
          font-size: 2.5rem;
        }

        .hero p {
          font-size: 1.1rem;
        }

        .cta-buttons {
          flex-direction: column;
          gap: 1rem;
        }

        .footer .container {
          flex-direction: column;
          text-align: center;
          gap: 1rem;
        }
      }
    </style>
  </body>
</html>
