# Site Configuration
SITE_URL="https://blog.radaideh.info"

# Development Configuration
DEV_URL="http://localhost:4321"
DEV_PORT="4321"

# Version (automatically set at deploy time by CI/CD)
# GIT_VERSION will be injected during deployment

# Giscus Configuration
# Get these values from https://giscus.app after setting up
GISCUS_REPO="halradaideh/astro"
GISCUS_REPO_ID="your-repo-id"
GISCUS_CATEGORY="General"
GISCUS_CATEGORY_ID="your-category-id"

# Cloudflare Pages Configuration
# Get these from your Cloudflare dashboard
CLOUDFLARE_API_TOKEN="your-api-token"
CLOUDFLARE_ACCOUNT_ID="your-account-id"

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS="60"
RATE_LIMIT_WINDOW="60"

# Security Configuration
SESSION_SECRET="your-session-secret-key-min-32-chars"
ENABLE_SECURITY_HEADERS="true"
MAX_REQUEST_SIZE="10mb"
ALLOWED_UPLOAD_TYPES="image/jpeg,image/png,image/webp" 