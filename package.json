{
  "name": "tech-blog",
  "type": "module",
  "version": "1.0.0",
  "description": "A modern blog site built with Astro, featuring Giscus comments and Cloudflare Pages deployment",
  "author": "Hamdan Radaideh",
  "license": "CC-BY-NC-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/halradaideh/astro.git"
  },
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "setup-env": "node scripts/setup-env.js",
    "setup-env:dev": "node scripts/setup-env.js dev",
    "setup-env:prod": "node scripts/setup-env.js prod",
    "validate-env": "node scripts/setup-env.js validate",
    "dev": "npm run validate-env && astro dev",
    "dev:docker": "docker build -t astro-blog-dev . && docker run --rm -it -p 4321:4321 -v $(pwd):/app -v /app/node_modules astro-blog-dev",
    "docker:build": "docker build -t astro-blog-dev .",
    "docker:run": "docker run --rm -it -p 4321:4321 -v $(pwd):/app -v /app/node_modules astro-blog-dev",
    "docker:clean": "docker rmi astro-blog-dev 2>/dev/null || true",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "analyze": "npx @next/bundle-analyzer build",
    "lighthouse": "npx lighthouse http://localhost:4321 --output=html --output-path=./lighthouse-report.html",
    "security-audit": "npm audit --audit-level moderate",
    "size-limit": "npx size-limit",
    "check-deps": "npx depcheck",
    "update-deps": "npx npm-check-updates -u"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@giscus/react": "^3.1.0",
    "@nivo/core": "^0.99.0",
    "@nivo/network": "^0.99.0",
    "@nivo/sankey": "^0.99.0",
    "framer-motion": "^12.12.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.16.0",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@cloudflare/workers-types": "^4.20250524.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.5.0",
    "astro": "^5.8.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.41.1"
  }
}
